<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="25dp"
            android:text="AES ECB Encryption" />


        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:text="Enter text to be Encrypted" />

        <EditText
            android:id="@+id/clear_text"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/label"
            android:layout_marginTop="20dp"
            android:background="@drawable/my_border"
            android:hint="Enter any text"
            android:padding="16dp"
            android:gravity="left|top"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/encrypt_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/clear_text"
            android:layout_marginTop="20dp"
            android:text="Encrypt" />

        <TextView
            android:id="@+id/encrypted_text"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/encrypt_button"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            android:gravity="left|top"
            android:background="@drawable/my_border"
            android:text="Encrypted Text" />
    </RelativeLayout>

</ScrollView>